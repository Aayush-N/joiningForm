<script>
function addField (argument) {
       var myTable = document.getElementById("research");
       var currentIndex = myTable.rows.length;
       var currentRow = myTable.insertRow(-1);
   
       var university = document.createElement("input");
       university.setAttribute("name", "Name_university" + currentIndex);
university.setAttribute("class", "form-control");
   
       var area = document.createElement("input");
       area.setAttribute("name", "area_research" + currentIndex);
area.setAttribute("class", "form-control");
   
       var research_to = document.createElement("input");
       research_to.setAttribute("name", "from_date" + currentIndex);
research_to.setAttribute("class", "form-control");
     
     var research_from = document.createElement("input");
       research_from.setAttribute("name", "to_date" + currentIndex);
research_from.setAttribute("class", "form-control");
   
     var research_total = document.createElement("input");
       research_total.setAttribute("name", "total_duration" + currentIndex);
research_total.setAttribute("class", "form-control");

var int_conf = document.createElement("input");
       int_conf.setAttribute("name", "total_internationalConf" + currentIndex);
int_conf.setAttribute("class", "form-control");

var title_paper = document.createElement("input");
       title_paper.setAttribute("name", "title_paper" + currentIndex);
title_paper.setAttribute("class", "form-control");

var conf = document.createElement("input");
       conf.setAttribute("name", "conf_International" + currentIndex);
conf.setAttribute("class", "form-control");

var year = document.createElement("input");
       year.setAttribute("name", "year_month_pub" + currentIndex);
year.setAttribute("class", "form-control");
  

       var currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(university);
   
       currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(area);
   
       currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(research_to);
   
     currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(research_from);
   
     currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(research_total);

	currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(int_conf);

currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(title_paper);

currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(conf);
   
     currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(year);
     }


function addField1 (argument) {
       var myTable = document.getElementById("conference");
       var currentIndex = myTable.rows.length;
       var currentRow = myTable.insertRow(-1);
   
       var university = document.createElement("input");
       university.setAttribute("name", "conf_conducted_org" + currentIndex);
university.setAttribute("class", "form-control");
   
       var area = document.createElement("input");
       area.setAttribute("name", "total_experience" + currentIndex);
area.setAttribute("class", "form-control");
   
       var research_to = document.createElement("input");
       research_to.setAttribute("name", "university" + currentIndex);
research_to.setAttribute("class", "form-control");
     
     var research_from = document.createElement("input");
       research_from.setAttribute("name", "designation" + currentIndex);
research_from.setAttribute("class", "form-control");
   
     var research_total = document.createElement("input");
       research_total.setAttribute("name", "from_date" + currentIndex);
research_total.setAttribute("class", "form-control");

var int_conf = document.createElement("input");
       int_conf.setAttribute("name", "to_date" + currentIndex);
int_conf.setAttribute("class", "form-control");

var title_paper = document.createElement("input");
       title_paper.setAttribute("name", "total_duration" + currentIndex);
title_paper.setAttribute("class", "form-control");

  

       var currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(university);
   
       currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(area);
   
       currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(research_to);
   
     currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(research_from);
   
     currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(research_total);

	currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(int_conf);

currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(title_paper);
     }


function addField2 (argument) {
       var myTable = document.getElementById("affiliation");
       var currentIndex = myTable.rows.length;
       var currentRow = myTable.insertRow(-1);
   
       var university = document.createElement("input");
       university.setAttribute("name", "profbody" + currentIndex);
university.setAttribute("class", "form-control");
   
       var area = document.createElement("input");
       area.setAttribute("name", "year" + currentIndex);
area.setAttribute("class", "form-control");
   
       var research_to = document.createElement("input");
       research_to.setAttribute("name", "no_member" + currentIndex);
research_to.setAttribute("class", "form-control");
     
     var research_from = document.createElement("input");
       research_from.setAttribute("name", "year_selection" + currentIndex);
research_from.setAttribute("class", "form-control");

       var currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(university);
   
       currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(area);
   
       currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(research_to);
   
     currentCell = currentRow.insertCell(-1);
       currentCell.appendChild(research_from);
     }


